<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1D7D7"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_title_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ED8686"
        android:layout_gravity="center_horizontal"
        android:textSize="70sp"
        android:text="@string/text_title_calender"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/btn_left"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="800px"/>
        <CalendarView
            android:id="@+id/calendarView_calender"
            android:layout_width="900px"
            android:layout_height="1900px"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="800px"/>
    </LinearLayout>
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#7fED8686"
        android:text="@string/app_name"/>


</LinearLayout>